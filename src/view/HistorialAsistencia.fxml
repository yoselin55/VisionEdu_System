<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.HistorialAsistenciaController"
            styleClass="root">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20"
              style="-fx-background-color: linear-gradient(to right,#1a237e,#283593);
                     -fx-padding: 0 25 0 25;">
            <Button fx:id="btnVolverHistorial" onAction="#handleVolver"
                    prefHeight="44" prefWidth="110"
                    style="-fx-background-color: transparent; -fx-border-color: white;
                           -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;
                           -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;
                           -fx-cursor: hand;"/>
            <Label fx:id="lblTituloHistorial"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="16" BorderPane.alignment="CENTER">
            <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

            <!-- Filtros + estadÃ­sticas -->
            <VBox styleClass="content-card" spacing="14">
                <padding><Insets top="18" bottom="18" left="20" right="20"/></padding>

                <HBox spacing="16" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label fx:id="lblFechaLabel" styleClass="label-subtitle"
                               style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                        <DatePicker fx:id="dpFecha" styleClass="text-field-custom"
                                    prefWidth="160" prefHeight="38"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label fx:id="lblBuscarLabel" styleClass="label-subtitle"
                               style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                        <TextField fx:id="txtIdAlumno" styleClass="text-field-custom"
                                   prefWidth="170" prefHeight="38"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text=" " style="-fx-font-size: 11px;"/>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Button fx:id="btnFiltrar" onAction="#handleFiltrarPorFecha"
                                    prefHeight="38" prefWidth="100"
                                    style="-fx-background-color: #1565c0; -fx-text-fill: white;
                                           -fx-font-weight: bold; -fx-font-size: 13px;
                                           -fx-background-radius: 8; -fx-cursor: hand;"/>
                            <Button fx:id="btnTodos" onAction="#handleMostrarTodos"
                                    prefHeight="38" prefWidth="90"
                                    style="-fx-background-color: transparent;
                                           -fx-border-color: #5c6bc0; -fx-border-width: 1.5;
                                           -fx-border-radius: 8; -fx-background-radius: 8;
                                           -fx-text-fill: #9fa8da; -fx-font-weight: bold;
                                           -fx-font-size: 13px; -fx-cursor: hand;"/>
                            <Button fx:id="btnExportar" onAction="#handleExportarReporte"
                                    prefHeight="38" prefWidth="140"
                                    style="-fx-background-color: #1b5e20; -fx-text-fill: #a5d6a7;
                                           -fx-font-weight: bold; -fx-font-size: 13px;
                                           -fx-background-radius: 8; -fx-cursor: hand;"/>
                        </HBox>
                    </VBox>
                </HBox>

                <Separator style="-fx-opacity: 0.25;"/>

                <HBox spacing="12" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="3"
                          prefHeight="65" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #1e2740; -fx-background-radius: 10;
                                 -fx-border-color: #3949ab; -fx-border-width: 1;
                                 -fx-border-radius: 10; -fx-padding: 8;">
                        <Label fx:id="lblStatTotal"
                               style="-fx-text-fill: #7986cb; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                        <Label fx:id="lblTotalRegistros" text="0"
                               style="-fx-text-fill: #e8eaf6; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="3"
                          prefHeight="65" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #1e2740; -fx-background-radius: 10;
                                 -fx-border-color: #2e7d32; -fx-border-width: 1;
                                 -fx-border-radius: 10; -fx-padding: 8;">
                        <Label fx:id="lblStatPresentes"
                               style="-fx-text-fill: #66bb6a; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                        <Label fx:id="lblTotalPresentes" text="0"
                               style="-fx-text-fill: #66bb6a; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="3"
                          prefHeight="65" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #1e2740; -fx-background-radius: 10;
                                 -fx-border-color: #e65100; -fx-border-width: 1;
                                 -fx-border-radius: 10; -fx-padding: 8;">
                        <Label fx:id="lblStatTardanzas"
                               style="-fx-text-fill: #ffa726; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                        <Label fx:id="lblTotalTarde" text="0"
                               style="-fx-text-fill: #ffa726; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="3"
                          prefHeight="65" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #1e2740; -fx-background-radius: 10;
                                 -fx-border-color: #b71c1c; -fx-border-width: 1;
                                 -fx-border-radius: 10; -fx-padding: 8;">
                        <Label fx:id="lblStatFaltas"
                               style="-fx-text-fill: #ef5350; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                        <Label fx:id="lblTotalFaltas" text="0"
                               style="-fx-text-fill: #ef5350; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
            </VBox>

            <TableView fx:id="tablaAsistencias"
                       VBox.vgrow="ALWAYS"
                       styleClass="table-view"
                       minHeight="250">
                <columns>
                    <TableColumn fx:id="colId"           prefWidth="50"  minWidth="40"/>
                    <TableColumn fx:id="colFoto"         prefWidth="65"  minWidth="50"/>
                    <TableColumn fx:id="colNombreAlumno" prefWidth="200" minWidth="120"/>
                    <TableColumn fx:id="colDia"          prefWidth="100" minWidth="70"/>
                    <TableColumn fx:id="colFecha"        prefWidth="120" minWidth="90"/>
                    <TableColumn fx:id="colHora"         prefWidth="100" minWidth="70"/>
                    <TableColumn fx:id="colEstado"       prefWidth="120" minWidth="80"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <placeholder>
                    <Label fx:id="lblPlaceholder" styleClass="label-subtitle"/>
                </placeholder>
            </TableView>
        </VBox>
    </center>
</BorderPane>