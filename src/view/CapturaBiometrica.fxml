<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CapturaBiometricaController"
            styleClass="root">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20"
              style="-fx-background-color: linear-gradient(to right, #1a237e, #283593);
                     -fx-padding: 0 25 0 25;">
            <Button onAction="#handleCerrar"
                    prefHeight="44" prefWidth="110"
                    style="-fx-background-color: transparent; -fx-border-color: white;
                           -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;
                           -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;
                           -fx-cursor: hand;" text="Volver"/>
            <Label fx:id="lblTitulo" text="CAPTURA BIOMETRICA"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="18" alignment="TOP_CENTER">
            <padding><Insets top="18" bottom="18" left="18" right="18"/></padding>

            <!-- Cámara: ocupa todo el espacio disponible -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="content-card" minWidth="300">
                <padding><Insets top="16" bottom="16" left="16" right="16"/></padding>

                <Label text="Vista de Cámara" styleClass="label-subtitle"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <StackPane style="-fx-background-color: #000000; -fx-background-radius: 10;"
                           VBox.vgrow="ALWAYS" alignment="CENTER" minHeight="280">
                    <ImageView fx:id="imgCamera"
                               preserveRatio="true"
                               fitWidth="640" fitHeight="460"/>
                </StackPane>

                <ProgressBar fx:id="progressBar"
                             maxWidth="Infinity" prefHeight="10"
                             progress="0.0"
                             style="-fx-accent: #1565c0;"/>
            </VBox>

            <!-- Panel lateral -->
            <VBox spacing="16" minWidth="240" maxWidth="300" prefWidth="270"
                  alignment="TOP_CENTER">

                <VBox spacing="12" styleClass="content-card">
                    <padding><Insets top="18" bottom="18" left="18" right="18"/></padding>

                    <Label text="Estado" styleClass="label-subtitle"
                           style="-fx-font-size: 11px; -fx-font-weight: bold;"/>

                    <Label fx:id="lblInstruccion"
                           text="Iniciando camara..."
                           styleClass="label-title"
                           style="-fx-font-size: 13px; -fx-wrap-text: true;"/>

                    <Separator style="-fx-opacity: 0.3;"/>

                    <Label text="Progreso" styleClass="label-subtitle"
                           style="-fx-font-size: 11px; -fx-font-weight: bold;"/>

                    <Label fx:id="lblContador" text="Foto: 0/1"
                           styleClass="label-title"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>

                <Button fx:id="btnCapturar" onAction="#handleCapturar"
                        text="Capturar Foto"
                        maxWidth="Infinity" prefHeight="52"
                        disable="true"
                        style="-fx-background-color: #1565c0; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-background-radius: 10; -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian,rgba(21,101,192,0.5),12,0,0,4);"/>

                <Button fx:id="btnCerrar" onAction="#handleCerrar"
                        text="Cancelar"
                        maxWidth="Infinity" prefHeight="52"
                        style="-fx-background-color: transparent; -fx-border-color: #ef5350;
                               -fx-border-width: 2; -fx-border-radius: 10;
                               -fx-background-radius: 10; -fx-text-fill: #ef5350;
                               -fx-font-weight: bold; -fx-font-size: 14px;
                               -fx-cursor: hand;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>